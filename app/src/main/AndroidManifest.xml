<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clicklabs.shopkeeperassignment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.BaseActivity">
        </activity>
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SignUp"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activity.DisplayCustomers"
            android:label="@string/title_activity_customer_details" />
        <activity
            android:name=".activity.AddCustomer"
            android:label="@string/title_activity_add_customer"/>
        <activity
            android:name=".activity.DisplayDetailsCustomer"
            android:label="@string/title_activity_display_details_customer"/>
        <activity
            android:name=".activity.LogIn"
            android:label="@string/title_activity_log_in"/>
    </application>

</manifest>
